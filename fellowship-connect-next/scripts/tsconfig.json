{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2017",
    "outDir": "./dist",
    "rootDir": "..",
    "noEmit": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": [
    ".",
    "../src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}